<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#5C6BC0" />
            </shape>
        </rotate>
    </item>
    <item android:bottom="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="#5C6BC0" /> />
        </shape>
    </item>
</layer-list>