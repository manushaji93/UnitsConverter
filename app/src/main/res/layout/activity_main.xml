<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:orientation="vertical"
    tools:context="com.example.manushaji.unitsconverter.MainActivity">

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:src="@drawable/pwtbg" />-->


    <TextView
        android:id="@+id/top_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#3F51B5"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="\u2193 select category \u2193"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/selector_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:elevation="6dp"
        android:entries="@array/Unit_Type"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:id="@+id/from_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_indigo_textbox"
            android:padding="8dp"
            android:text="From"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/from_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edit_text"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <EditText
        android:id="@+id/from_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_edit_text"
        android:gravity="left|top"
        android:hint="0"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:text=""
        android:textSize="30sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:alpha="1"
        android:onClick="infoPressed"
        android:src="@drawable/info_icon" />

    <LinearLayout
        android:id="@+id/to_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_indigo_textbox"
            android:padding="8dp"
            android:text="To"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/to_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edit_text"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <TextView
        android:id="@+id/to_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_edit_text"
        android:gravity="top|left"
        android:padding="8dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30sp" />


</LinearLayout>
